<launch>
<node pkg="explore_lite" type="explore" respawn="false" name="explore" output="screen">
  <param name="robot_base_frame" value="base_link"/>
  <param name="costmap_topic" value="map"/>
  <param name="costmap_updates_topic" value="map_updates"/>
  <param name="visualize" value="true"/>
  <param name="planner_frequency" value="0.15"/>
  <param name="progress_timeout" value="20.0"/>
  <param name="potential_scale" value="5.0"/>
  <param name="orientation_scale" value="0.0"/>
  <param name="gain_scale" value="1.0"/>
  <param name="transform_tolerance" value="0.3"/>
  <param name="min_frontier_size" value="2.0"/>
  <param name="local_frontier_filter_radius" value="3.0"/>
  <param name="min_local_frontiers" value="2.0"/>
  <param name="min_global_frontiers" value="1.0"/>
  <param name="global_frontier_filter_radius" value="30.0"/>
  <param name="min_frontier_spacing" value="1.5"/>
</node>
</launch>
